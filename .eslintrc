---
  root: true
  extends:
    airbnb-base
  parser: babel-eslint
  env:
    es6: true
    node: true
    mocha: true
  rules:
    arrow-body-style: 0
    arrow-parens: [2, "always"]
    class-methods-use-this: 0
    comma-dangle: [2, "never"]
    guard-for-in: 0
    import/no-extraneous-dependencies: [2, { devDependencies: true }]
    import/prefer-default-export: 1
    max-len: 1
    no-console: 0
    no-unused-vars: [2, { varsIgnorePattern: "componentStyles" }]
    no-use-before-define: 0
    object-curly-newline: 0
    no-continue: 0
